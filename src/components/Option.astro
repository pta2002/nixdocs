---
import "@fontsource/fira-code";

export interface Props {
	name: string;
}

const { name } = Astro.props;
---

<div id={name} class="option">
	<h3><a href={`#${name}`}>{name}</a></h3>
</div>

<style lang="scss">
	.option {
		margin-bottom: 1rem;

		> * {
			margin-bottom: 0.5rem;
		}

		h3 {
			font-family: var(--font-mono);
			display: inline-flex;
			border-bottom: 1px solid var(--color-fg);
			gap: 0.5ch;
			margin-bottom: 0.5rem;
			a {
				color: inherit;
				text-decoration: none;
			}

			&::before {
				content: "#";
				color: var(--color-fg4);
			}

			&:hover::before {
				color: var(--color-fg);
			}
		}

		.label {
			font-weight: bold;
		}
	}
</style>
